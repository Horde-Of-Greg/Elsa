{
    "name": "elsa",
    "version": "0.4.1",
    "main": "dist/main.js",
    "scripts": {
        "build": "tsc",
        "start": "node dist/main.js",
        "dev": "ts-node src/main.ts",
        "tscheck": "tsc --noEmit",
        "db:drop": "ts-node tools/db/drop.ts",
        "db:create": "ts-node tools/db/create.ts",
        "db:reset": "ts-node tools/db/reset.ts",
        "db:psql": "ts-node tools/db/psql.ts",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "lint:check": "eslint .",
        "lint:fix": "eslint . --fix",
        "lint:report": "eslint \"src/**/*.ts\" --format json --output-file temp/lint/eslint_report.json",
        "lint:knip": "knip",
        "actions:bump": "ts-node tools/versioning/bump.ts",
        "actions:lint-pr": "ts-node tools/versioning/pr-lint.ts",
        "actions:lint-commit": "ts-node tools/versioning/commit-lint.ts",
        "tools:search-error": "ts-node tools/errors/search-error.ts",
        "production:update-configs": "ts-node tools/production/update-configs.ts",
        "production:pull": "./tools/production/pull.sh",
        "migration:generate": "ts-node ./node_modules/typeorm/cli.js migration:generate InitialSchema -d src/db/dataSource.ts",
        "migration:run": "typeorm migration:run -d dist/db/dataSource.js",
        "migration:revert": "typeorm migration:revert -d dist/db/dataSource.js"
    },
    "dependencies": {
        "@actions/core": "^2.0.1",
        "@actions/github": "^6.0.1",
        "@discordjs/builders": "^1.13.1",
        "discord.js": "^14.14.1",
        "dotenv": "^16.3.1",
        "jiti": "^2.6.1",
        "node-cron": "^4.2.1",
        "octokit": "^5.0.5",
        "pg": "^8.16.3",
        "prettier": "^3.7.4",
        "redis": "^5.10.0",
        "reflect-metadata": "^0.2.2",
        "typeorm": "^0.3.27",
        "zod": "^4.1.12"
    },
    "devDependencies": {
        "@eslint/js": "^9.39.1",
        "@types/node": "^20.19.26",
        "@types/pg": "^8.10.9",
        "@typescript-eslint/eslint-plugin": "^8.49.0",
        "@typescript-eslint/parser": "^8.49.0",
        "eslint": "^9.39.1",
        "eslint-plugin-n": "^17.23.1",
        "eslint-plugin-simple-import-sort": "^12.1.1",
        "eslint-plugin-sonarjs": "^3.0.5",
        "eslint-plugin-unused-imports": "^4.3.0",
        "globals": "^16.5.0",
        "knip": "^5.73.4",
        "ts-node": "^10.9.1",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.49.0"
    }
}
