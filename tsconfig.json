{
    "compilerOptions": {
        "target": "es2022",
        "module": "commonjs",
        "outDir": "dist",
        "rootDir": "src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strictPropertyInitialization": false
    },
    "exclude": ["*.config.*", "node_modules", "dist", "tools"]
}
